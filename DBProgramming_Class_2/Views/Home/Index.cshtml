@model List<DBProgramming_Class_2.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="~/Content/style.css" />
<script type="text/javascript" src="~/Content/app.js"></script>

<div class="jumbotron">
    <h1>Our Class Book Store</h1>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>List of Books</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table id="products" class="styled-table">
            <thead>
                <tr>
                    <th>Product Code</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th># of Invoices</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <th onclick="getProductDetails('@product.ProductCode')">@product.ProductCode</th>
                        <td>@product.Description</td>
                        <td>@product.UnitPrice</td>
                        <td>@product.InvoiceLineItems.Count()</td>
                        <td>
                            @if (product.InvoiceLineItems.Count() == 0)
                            {
                                <span>No Invoices</span>
                            }
                            else
                            {
                                <a href="/Invoices/Index/@product.ProductCode">Display all Invoices</a>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>